<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lac_troi"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cndd.finalproject.LetterActivity">

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="@dimen/btn_play_width"
        android:layout_height="@dimen/btn_play_height"
        android:layout_alignParentTop="true"
        android:layout_below="@id/btnPlay"
        android:layout_centerHorizontal="true"
        android:background="@drawable/play"
        android:text="@string/text_btn_play"
        android:textColor="@android:color/white"
        android:textSize="@dimen/btn_play_textsize"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/btnHelp"
        android:layout_width="@dimen/btn_howtoplay_width"
        android:layout_height="@dimen/btn_howtoplay_height"
        android:layout_above="@+id/btnAbout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/btn_howtoplay_marginbottom"
        android:background="@drawable/play"
        android:text="@string/text_btn_howtoplay"
        android:textColor="@android:color/white"
        android:textSize="@dimen/btn_howtoplay_textsize"
        android:typeface="serif"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="@dimen/btn_about_width"
        android:layout_height="@dimen/btn_about_height"
        android:layout_marginBottom="@dimen/btn_about_marginbottom"
        android:background="@drawable/play"
        android:text="@string/text_btn_about"
        android:textColor="@android:color/white"
        android:textSize="@dimen/btn_about_textsize"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnHelp"
        android:typeface="serif"
        android:textStyle="bold"/>
</RelativeLayout>
